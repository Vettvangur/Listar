{
    "compilerOptions": {
        "module": "commonjs",
 		"jsx": "react",
        "target": "es5",
 		"allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./js/*"],
            "components/*" : ["./js/components/*"],
            "data/*"       : ["./js/data/*"],
            "models/*"     : ["./js/models/*"],
            "pages/*"     : ["./js/pages/*"],
            "utilities/*"  : ["./js/utilities/*"],
            "gUtilities/*"  : ["./js/gUtilities/*"],
            "reusableComponents/*"    : ["./js/reusableComponents/*"]
        }
    },
    "exclude": [
        "bower_components",
        "node_modules"
    ]
}
